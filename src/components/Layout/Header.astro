---
import Girasol from "../../assets/girasol.svg";

const current = Astro.url.pathname;
---

<header class="flex justify-between items-center px-6 py-4 bg-gray-50 relative shadow-md">
   <!-- Logo -->
  <a href="/" class="flex items-center gap-2 text-[#15803d] font-extrabold text-3xl lg:text-4xl leading-tight tracking-wide">
    <h2 class="flex flex-col">
      <span class="flex items-center gap-2">
        LEONELA
        <img 
          src={Girasol.src} 
          alt="Logotipo de girasol de Leonela Cardozo" 
          class="w-8 h-8 lg:w-10 lg:h-10" 
          loading="lazy"
        />
      </span>
      <span>CARDOZO</span>
    </h2>
  </a>

  

  <!-- Botón menú móvil -->
  <button 
    class="lg:hidden p-2 text-[#15803d] focus:outline-none focus:ring-2 focus:ring-[#15803d]"
    id="menu-btn"
    aria-label="Abrir menú"
    aria-expanded="false"
    aria-controls="menu"
    onclick="document.getElementById('menu').classList.toggle('hidden'); this.setAttribute('aria-expanded', this.getAttribute('aria-expanded') === 'false' ? 'true' : 'false')"
  >
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
    </svg>
  </button>

  <!-- Menú de navegación -->
  <nav 
    id="menu" 
    aria-label="Menú principal" 
    class="hidden lg:block absolute lg:static top-full right-0 bg-gray-50 lg:bg-transparent w-full lg:w-auto shadow lg:shadow-none z-50"
  >
    <ul class="flex flex-col lg:flex-row items-start lg:items-center gap-4 lg:gap-6 p-4 lg:p-0 text-lg font-medium">
      <li>
        <a href="#hero" class="hover:text-[#15803d] text-black">Inicio</a>
      </li>
      <li>
        <a href="#aboutme" class="hover:text-[#15803d] text-black">Acerca de mí</a>
      </li>
      
      <li>
        <a href="#benefits" class="hover:text-[#15803d] text-black">Beneficios</a>
      </li>
      <li>
        <div class="animate-bounce-desktop">
            <a href="#featured"
            class={`px-4 py-2 rounded-md border-2 shadow-[3px_3px_0px_black] transition 
                ${current === "/products-services" 
                ? "bg-[#15803d] text-white font-semibold border-black" 
                : "bg-[#15803d] text-white border-black hover:translate-x-[2px] hover:translate-y-[2px] hover:shadow-none"
                }`
            }
            >
            Paquete Destacado
            </a>
        </div>
        </li>
      <li>
        <a href="#payment" class="hover:text-[#15803d] text-black">Pagos</a>
      </li>
      <li>
        <a href="#testimonials" class="hover:text-[#15803d] text-black">Testimonios</a>
      </li>
    </ul>
  </nav>
</header>

<style>
/* Definimos la animación bounce suave */
    @keyframes smooth-bounce {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-6px); }
    }

    /* Aplicar solo en pantallas mayores a 1000px */
    @media (min-width: 1000px) {
    .animate-bounce-desktop {
        animation: smooth-bounce 2s ease-in-out infinite;
    }
    }
</style>
