---
import { getSheetData, SHEET_MAIN_URL } from "../../lib/getSheetData";

const data = await getSheetData(SHEET_MAIN_URL);
---

<section class="max-w-6xl mx-auto p-6">
  <h1 class="text-2xl font-bold mb-6 text-center">ðŸ“Š Tabla desde Google Sheets</h1>

  <div class="overflow-x-auto rounded-xl shadow-lg">
    <table class="min-w-full border border-gray-200 bg-white">
      <thead class="bg-gray-100">
        <tr>
          {Object.keys(data[0]).map((key) => (
            <th
              scope="col"
              class="px-6 py-3 text-left text-sm font-semibold text-gray-700 uppercase tracking-wide border-b"
            >
              {key}
            </th>
          ))}
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        {data.map((row, i) => (
          <tr class={i % 2 === 0 ? "bg-white" : "bg-gray-50"}>
            {Object.values(row).map((cell) => (
              <td class="px-6 py-4 text-sm text-gray-800 whitespace-nowrap">
                {cell}
              </td>
            ))}
          </tr>
        ))}
      </tbody>
    </table>
  </div>
</section>
